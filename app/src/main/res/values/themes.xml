<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PixelPlax" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onprimary</item>
        <item name="colorSurface">@color/container</item>
        <item name="colorPrimaryContainer">@color/primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/onprimaryContainer</item>
        <item name="colorOutlineVariant">@color/outline</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">62dp</item>
        <item name="itemActiveIndicatorStyle">?attr/background</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:elevation">36dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="menu">@menu/bottom_nav_menu</item>

    </style>

</resources>